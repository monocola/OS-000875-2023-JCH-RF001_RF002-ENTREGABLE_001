{
  "semi": true,
  "singleQuote": true,
  "tabWidth": 2,
  "overrides": [
    {
      "files": ["**/*.css", "**/*.scss", "**/*.html"],
      "options": {
        "singleQuote": true
      }
    },
    {
      "files": ["**/*.ts"],
      "options": {
        "singleQuote": true,
        "printWidth": 80
      }
    }
  ]
}
